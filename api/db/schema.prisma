datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Schedule {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  SignUp    SignUp[] @relation("ScheduleSignUp")
}

model SignUp {
  id         Int      @id @default(autoincrement())
  scheduleId Int
  userId     Int
  schedule   Schedule @relation("ScheduleSignUp", fields: [scheduleId], references: [id], onDelete: Cascade)
  user       User     @relation("UserSignUp", fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   String?
  email     String   @unique
  name      String   @default("")
  SignUp    SignUp[] @relation("UserSignUp")
  roles     String?
  member    Boolean?
}
