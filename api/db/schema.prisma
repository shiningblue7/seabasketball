datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Schedule {
  id        Int      @id @default(autoincrement())
  title     String
  schedule  DateTime
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   String?
  email     String   @unique
  name      String   @default("")
}
